{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lunch",
  "identifier": "com.lunch.desktop",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "./dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Lunch",
        "width": 600,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 320,
        "minHeight": 480
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "iOS": {
      "developmentTeam": "654C9Y2C3F"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
